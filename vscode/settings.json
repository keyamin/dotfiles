{
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.codeActionsOnSave": { "source.organizeImports": true },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.fontFamily": "HackGenNerd, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 18,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": true,
  "editor.parameterHints.enabled": false,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,
  "files.associations": { "*.tfvars": "terraform" },
  "files.trimTrailingWhitespace": true,
  "eslint.validate": ["typescript", "typescriptreact"],
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "git.confirmSync": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": false,
    "ignore": true
  },
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "gitlens.codeLens.enabled": false,
  "githubPullRequests.fileListLayout": "tree",
  "go.formatTool": "gofmt",
  "go.toolsManagement.autoUpdate": true,
  "[go]": { "editor.defaultFormatter": null },
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.lintOnSave": true,
  "python.formatting.provider": "black",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "off",
  "[python]": { "editor.defaultFormatter": null },
  "redhat.telemetry.enabled": true,
  "[rust]": { "editor.defaultFormatter": null },
  "rust-analyzer.checkOnSave.command": "clippy",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 16,
  "[terraform]": { "editor.defaultFormatter": "hashicorp.terraform" },
  "vim.hlsearch": true,
  "vim.enableNeovim": true,
  "vim.neovimUseConfigFile": true,
  "vim.neovimConfigPath": "~/.config/nvim/init.vim",
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.config/nvim/init.vim",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.openFilesInNewWindow": "off",
  "window.newWindowDimensions": "maximized",
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 14,
  "workbench.tree.renderIndentGuides": "always",
  // Vim Keybindings
  "vim.leader": "space",
  "vim.normalModeKeyBindings": [
    {
      "before": ["K"],
      "commands": [
        {
          "command": "editor.action.showHover"
        }
      ]
    },
    {
      "before": ["leader", "d", "n"],
      "commands": [
        {
          "command": "editor.action.openLink"
        },
        {
          "command": "editor.action.goToTypeDefinition"
        },
        {
          "command": "editor.action.revealDefinition"
        }
      ]
    },
    {
      "before": ["leader", "d", "a"],
      "commands": [
        {
          "command": "editor.action.revealDefinitionAside"
        }
      ]
    },
    {
      "before": ["leader", "d", "h"],
      "commands": [
        {
          "command": "editor.action.peekDefinition"
        }
      ]
    }
  ]
}
